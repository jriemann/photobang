<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/container_padding"
    android:background="@color/color_grey_dark">


    <ImageView
        android:id="@+id/onboarding_slide_img"
        android:layout_width="wrap_content"
        android:layout_height="196dp"
        android:layout_marginBottom="@dimen/lg_spacing"
        android:layout_marginTop="@dimen/lg_spacing"
        android:src="@drawable/pic_album" />

    <com.scopely.fontain.views.FontTextView
        android:id="@+id/onboarding_slide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/reg_spacing"
        android:text="What are you waiting for? "
        android:textColor="@color/color_accent_text"
        android:textSize="@dimen/font_display1"
        app:font_weight="SEMI_BOLD" />

    <com.scopely.fontain.views.FontButton
        android:id="@+id/home_find_bad_photos"
        style="@style/Ui.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Find my Bad Photos"
        android:layout_marginTop="@dimen/lg_spacing"
        app:font_family="@string/proxima_nova"
        app:font_weight="SEMI_BOLD" />

</LinearLayout>