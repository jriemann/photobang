<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_dark">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

    </android.support.v4.view.ViewPager>
    <com.scopely.fontain.views.FontTextView
        android:id="@+id/results_select_all_text"
        style="@style/Ui.TextView.Header.Thin"
        android:textColor="@color/color_grey_light"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/md_spacing"
        android:layout_marginLeft="@dimen/md_spacing"
        android:layout_weight="1"
        app:font_weight="SEMI_BOLD"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/reg_spacing"
        android:textSize="@dimen/font_display1"
        android:text="Prune"/>
</RelativeLayout>