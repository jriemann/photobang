<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:elevation="@dimen/toolbar_elevation"
    android:background="@color/color_grey_dark">
    <ImageButton
        android:id="@+id/results_toolbar_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_back_white"
        android:padding="@dimen/icon_padding_lg"
        android:background="@drawable/bg_grey_button_square"/>
    <com.scopely.fontain.views.FontTextView
        android:id="@+id/results_title"
        style="@style/Ui.TextView.Header.Thin"
        android:textColor="@color/color_accent"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        app:font_weight="SEMI_BOLD"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tools:text="0 out of 45 marked for deletion"/>
    <ImageButton
        android:id="@+id/results_toolbar_delete"
        android:src="@drawable/ic_delete_white"
        android:text="CONFIRM"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:padding="@dimen/icon_padding_lg"
        android:textColor="@color/color_accent"
        android:gravity="center"
        android:background="@drawable/bg_primary_button_square"/>
</LinearLayout>