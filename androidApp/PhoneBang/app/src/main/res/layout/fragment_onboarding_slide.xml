<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/container_padding"
    tools:background="@color/color_grey_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/xxl_spacing"
        android:padding="@dimen/container_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/xl_spacing"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/_ic_swipe_grey"/>
            <com.scopely.fontain.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/reg_spacing"
                android:text="Swipe"
                android:textColor="@color/color_grey_light"
                android:textSize="@dimen/font_display1"
                app:font_weight="SEMI_BOLD" />
        </LinearLayout>
        <ImageView
            android:id="@+id/onboarding_slide_img"
            android:layout_width="wrap_content"
            android:layout_height="196dp"
            android:layout_marginBottom="@dimen/lg_spacing"
            android:layout_marginTop="@dimen/lg_spacing"
            android:src="@drawable/pic_photos_in_sd" />

        <com.scopely.fontain.views.FontTextView
            android:id="@+id/onboarding_slide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/reg_spacing"
            android:text="Photos can take up a lot of space on your phone..."
            android:textColor="@color/color_accent_text"
            android:textSize="@dimen/font_display1"
            app:font_weight="SEMI_BOLD" />

    </LinearLayout>
    <com.scopely.fontain.views.FontButton
        android:id="@+id/onboarding_slide_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        style="@style/Ui.Button.Primary"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:drawablePadding="@dimen/sm_spacing"
        android:drawableRight="@drawable/ic_right_arrow_white"
        android:background="@drawable/bg_primary_button_rounded_rect"/>
</RelativeLayout>