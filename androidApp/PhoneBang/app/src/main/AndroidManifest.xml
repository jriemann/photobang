<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.davidhan.photobang">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".PhotoBang"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:theme="@style/Ui"
        tools:replace="android:theme,android:icon">
        <activity
            android:name=".frontend.homescreen.activities.HomeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frontend.resultscreen.activities.ResultsActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        <activity
            android:name=".frontend.processingscreen.activities.ProcessingActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        <activity
            android:name=".frontend.resultscreen.activities.PreviewModal"
            android:theme="@style/Ui.Modal">
        </activity>
        <activity
            android:name=".frontend.resultscreen.activities.ConfirmDeleteModal"
            android:theme="@style/Ui.Modal">
        </activity>
        <activity
            android:name=".frontend.donescreen.activities.DoneActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>

    </application>

</manifest>
